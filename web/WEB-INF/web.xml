<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- * @author RAHUL and SHREYA (INTERNSHIP PROJECT)-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adddetails</servlet-name>
        <servlet-class>adddetails</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>remove_product</servlet-name>
        <servlet-class>remove_product</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_verification</servlet-name>
        <servlet-class>admin_verification</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin_update</servlet-name>
        <servlet-class>admin_update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>delete_customer</servlet-name>
        <servlet-class>delete_customer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clear_data</servlet-name>
        <servlet-class>clear_data</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adddetails</servlet-name>
        <url-pattern>/adddetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>remove_product</servlet-name>
        <url-pattern>/remove_product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_verification</servlet-name>
        <url-pattern>/admin_verification</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin_update</servlet-name>
        <url-pattern>/admin_update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>delete_customer</servlet-name>
        <url-pattern>/delete_customer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clear_data</servlet-name>
        <url-pattern>/clear_data</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
